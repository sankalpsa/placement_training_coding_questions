
#include <stdio.h>

int main() {
    int num;
    printf("Please enter any number to find the sum of it's digits\n");
    scanf("%d",&num);
    int rem,sum=0;
    while(num/10!=0)
    {
        rem=num%10;
        sum=sum+rem;
        num=num/10;
    }
    sum=sum+num;;
    printf("\n");
    printf("Sum of digits of the user entered number is %d\n",sum);
    return 0;
}
